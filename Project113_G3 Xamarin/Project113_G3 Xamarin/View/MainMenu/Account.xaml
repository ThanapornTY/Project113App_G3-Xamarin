                        <Label Text="ID: " HeightRequest="80" Grid.Column="1" Grid.Row="0" Padding="5,50,5,5" FontSize="19"/>
                        <Label Text="001" HeightRequest="80" Grid.Column="1" Grid.Row="0" Padding="30,50,5,5" FontSize="19"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <Label Text="Profile" FontSize="20"  HorizontalOptions="Start"/>
            <Button Text="Edit Profile" FontSize="15" HeightRequest="60" Clicked="EditPf_Clicked" CornerRadius="10" />


            <Label Text="QRGame" FontSize="20"  HorizontalOptions="Start"/>
            <Button Text="QRGame" FontSize="15" HeightRequest="60" CornerRadius="10" Clicked="RqGame_Clicked"/>
            <Button Text="Sign Out" FontSize="15" HeightRequest="60" CornerRadius="10" BackgroundColor="Tomato" TextColor="White" Clicked="LogOut_Click"/>

